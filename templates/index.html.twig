            <fieldset>
                <legend class="text-sm">Player 1</legend>
                <input type="text" name="player1_name" id="player1_name" class="">
                <select name="player1_symbol" id="player1_symbol">
                    <option value="R">Rock</option>
                    <option value="P">Paper</option>
