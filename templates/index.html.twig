                    <option value="R">Rock</option>
                    <option value="P">Paper</option>
                    <option value="S">Scissors</option>
                </select>
            </fieldset>
            <h3 class="text-sm">Date</h3>
            <div class="mb-2">
                <input type="datetime-local" name="rounddate" id="rounddate">
            </div>
